<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDEADD"
    android:focusable="true"
    tools:context="com.example.AP041_AppBolitos.PaginaPrincipla">

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/slider1"
        android:layout_width="416dp"
        android:layout_height="253dp"
        app:auto_cycle="true"
        app:corner_radius="5"
        app:delay="0"
        app:error_image="@drawable/fondoslider1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:period="1000"
        app:placeholder="@drawable/fondoslider1" />

    <Button
        android:id="@+id/btnYoPlanto"
        android:layout_width="125dp"
        android:layout_height="65dp"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="268dp"
        android:background="#DD45AA49"
        android:fontFamily="serif-monospace"
        android:onClick="openYoPlanto"


        android:text="Yo Planto"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDondePlantar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="352dp"
        android:text="Â¿Donde Plantar?"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibtnMapa"
        android:layout_width="314dp"
        android:layout_height="226dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="388dp"
        android:onClick="openMapa"
        android:padding="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imgmapa" />


</androidx.constraintlayout.widget.ConstraintLayout>